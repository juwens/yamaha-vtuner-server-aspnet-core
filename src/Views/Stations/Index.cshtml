@model IEnumerable<VtnrNetRadioServer.Repositories.ItemContainer>
@{
    Layout = "_Layout";
}
<style>
    body {
        margin: 2px;
    }

    html {
        background-color: aliceblue;
    }

    hr {
        margin: 0;
    }
</style>

<div style="max-width: 400px;">
    @foreach (var itemContainer in Model)
    {
        <div style="display: flex; margin: 5px; align-items: flex-start;">
            <div style="display: flex; flex-grow: 1;">
                @Html.ActionLink(itemContainer.Key, "Edit", new { id = itemContainer.Item.StationName })
            </div>
            <div style="display: flex; flex-grow: 0;">
                <form asp-controller="Stations" method="POST">
                    <input name="id" type="hidden" value="@itemContainer.Key" />
                    <button style="margin: 0 5px;" asp-action="Delete">&trash;</button>
                    <button style="margin: 0 5px;" asp-action="Up">&uArr;</button>
                    <button style="margin: 0 5px;" asp-action="Down">&dArr;</button>
                </form>
            </div>
        </div>
        <hr />
    }
    <form asp-controller="Stations" asp-action="Add" method="POST">
        <fieldset>
            <legend>New Station</legend>
            <input type="text" name="name" value="station-name" />
            <input type="text" name="url" value="station-url" />
            <button>Add Station</button>
        </fieldset>
    </form>
</div>
